{% block article %}


	    <header class="page-header">
	      <h1>{{marca}}</h1>
	    </header>

<section class="mb40">

        <div class="row ">



          <div class="span4">
                        <p> 
                        {% trans %}Modelos %marca% que pronto contar√°n con kits autoinstalables patentados Furgomania{% endtrans %} 
                        </p>
                  <div class="row">


                  {% for entity in entities %}
