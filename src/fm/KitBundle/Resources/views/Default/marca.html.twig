{% extends 'mainBundle::layout.html.twig' %}
{% block title %}Concesionarios{% endblock %}
{% block description %}{% endblock %}
{% block article %}

<script>
fbq('track', 'ViewContent');
</script>
  

<section id="content" class="portfolio">
    <header>
      <h1>FURGONETAS {{ marca | upper }} CAMPER</h1>
      <h2>Elige tu modelo</h2>
    </header>


	<div class="row mb40">

		{% for entity in modelos %}
			<div class="span3">
			  <article class="furgo"> 
				<a href="{{path('fm_kit_default_vehiculo',{'marca':entity.marcaslug,'modelo':entity.modeloslug})}}">
					<section> <img alt="Furgonetas camper {{marca | capitalize}}" src="/img/furgos/{{entity.marcaslug}}-{{entity.modeloslug}}.jpg"> </section>
				</a>
				<section class="projectInfo">
				  <h3><a href="{{path('fm_kit_default_vehiculo',{'marca':entity.marcaslug,'modelo':entity.modeloslug})}}">{{entity.modelo}}</a></h3>
				</section>
			  </article>
			</div>
		{% endfor %}
		
	</div>
	
	{% set path_marca = 'KitBundle:Marcas:' ~ marca|lower ~ '.html.twig' %}
	{% include path_marca ignore missing %}

</section>



{% endblock %}