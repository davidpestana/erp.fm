{% extends "erpBundle::layout.html.twig" %}

{% block title -%} Facturas Proforma{% endblock %}

{% block body -%}



            <div class="portlet box blue">

                        <div class="portlet-title">
                                <div class="caption"><i class="icon-globe"></i>Listado general de facturas proforma</div>
                                <div class="actions">
                                    <div class="btn-group">
                                        <a class="btn" href="#" data-toggle="dropdown">
                                        Mostrar/Ocultar Columnas
                                        <i class="icon-angle-down"></i>
                                        </a>
                                        <div id="sample_2_column_toggler" class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                                            <label><input type="checkbox" checked data-column="2">Observaciones</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="portlet-body">



                                    <table class="table table-striped table-bordered table-hover table-full-width" id="sample_2">

                                        <thead>
                                            <tr>
                                                <th>Codproforma</th>
                                                <th>Fecha</th>
                                                <th>Observaciones</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for entity in entities %}
                                            <tr>
                                                <td>{{ entity.codproforma }}</td>
                                                <td>{% if entity.fecha %}{{ entity.fecha|date('d-m-Y') }}{% endif %}</td>
                                                <td>{{ entity.observaciones }}</td>
                                                <td>
                                            
                                                     <a href="{{ path('proformas_show', { 'id': entity.id }) }}" class="modal_ajax_btn btn mini" data-toggle="modal">ver</a>
                                                   <a href="{{ path('proformas_edit', { 'id': entity.id }) }}" class="modal_ajax_btn btn blue mini" data-toggle="modal">editar</a>
                                                    <a href="{{ path('proformas_edit', { 'id': entity.id }) }}" class="modal_ajax_btn btn mini" data-toggle="modal">enviar PDF al cliente</a>
                                                <a href="{{ path('proformas_show', { 'id': entity.id,'_format':'pdf'}) }}" class="btn mini">descargar PDF</a>
                                                  <a href="{{ path('proformas_edit', { 'id': entity.id }) }}" class="modal_ajax_btn btn red mini" data-toggle="modal">facturar</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                            </div>
                    </div>


            <a href="{{ path('proformas_new') }}" class="btn red modal_ajax_btn" data-toggle="modal">
               CREAR NUEVA FACTURA PROFORMA
            </a>
    {% endblock %}
