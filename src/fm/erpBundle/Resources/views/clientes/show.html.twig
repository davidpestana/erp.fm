{% extends "erpBundle::layout.html.twig" %}

{% block title -%} Ficha Cliente {{ entity.name }}{% endblock %}

{% block body -%}

        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>Direccion</th>
                    <td>{{ entity.direccion }}</td>
                </tr>
                <tr>
                    <th>Provincia</th>
                    <td>{{ entity.provincia }}</td>
                </tr>
                <tr>
                    <th>Cp</th>
                    <td>{{ entity.cp }}</td>
                </tr>
                <tr>
                    <th>Dnicif</th>
                    <td>{{ entity.dniCif }}</td>
                </tr>
                <tr>
                    <th>Observaciones</th>
                    <td>{{ entity.observaciones }}</td>
                </tr>
                <tr>
                    <th>Furgo</th>
                    <td>{{ entity.furgo }}</td>
                </tr>
            </tbody>
        </table>

        <table class="table table-striped table-bordered table-hover table-full-width">
            {% for proforma in proformas  %}
                 <tr><td>{{ proforma.codproforma}}</td><td>   
                 <a href="{{ path('proformas_edit', { 'id': entity.id }) }}" class="modal_ajax_btn btn red" data-toggle="modal">facturar</a>
                 <a href="{{ path('proformas_edit', { 'id': entity.id }) }}" class="modal_ajax_btn btn green" data-toggle="modal">editar</a>
                 </td></tr>
            {% endfor %}
        </table>


        <a href="{{ path('clientes_edit', { 'id': entity.id }) }}" class="btn blue modal_ajax_btn" data-toggle="modal">
            Editar
        </a>

        <a href="{{ path('proformas_new', { 'cliente': entity.id }) }}" class="modal_ajax_btn btn green" data-toggle="modal">+ Nueva Proforma</a>

        <a href="{{ path('clientes') }}" class="btn">
            Volver al listado de Clientes
        </a>

{% endblock %}
