{% extends "erpBundle::layout.modal.html.twig" %}

{% block title -%} Editor Cliente {{ entity.name }}{% endblock %}

{% block body -%}

    <form id="edit" action="{{ path('clientes_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        <div class="row-fluid">

        <div class="span8">
        {{ form_row(edit_form.observaciones, { 'attr': {'style':'width:100%; height:400px'} }) }}
        {# {{ form_row(edit_form.furgo, { 'attr': {'style':'width:100%'} }) }} #}

        </div>

        <div class="span4">{{ form_widget(edit_form) }}</div>

        </div>

    </form>



    <form form="del" action="{{ path('clientes_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
    </form>


<div class="modal-footer">

        <button type="submit" class="btn blue" form="edit">GUARDAR CAMBIOS</button>

        <button type="submit" class="btn red" form="del">ELIMINAR ESTE CLIENTE</button>


    <button type="button" data-dismiss="modal" class="btn">Cerrar</button>
</div>



{% endblock %}