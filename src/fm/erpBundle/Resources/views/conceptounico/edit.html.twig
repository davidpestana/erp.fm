{% extends 'erpBundle::layout.modal.html.twig' %}

{% block title -%} Editar Conceptos {% endblock %}

{% block body -%}
	<form action="{{ path('conceptounico_update', { 'id': entity.id }) }}" method="POST" {{ form_enctype(edit_form) }}>
		<input type="hidden" name="_method" value="PUT" />
    	{{ form_widget(edit_form) }}
	</form>

	<form action="{{ path('conceptounico_delete', { 'id': entity.id }) }}" method="POST" {{ form_enctype(edit_form) }}>
		<input type="hidden" name="_method" value="PUT" />
    	{{ form(delete_form) }}
	</form>
{% endblock %}