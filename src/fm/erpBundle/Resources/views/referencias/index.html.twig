{% extends "erpBundle::layout.html.twig" %}

{% block title -%} Gestion de Referencias {% endblock %}

{% block body -%}



            <div class="portlet box blue">

                        <div class="portlet-title">
                                <div class="caption"><i class="icon-globe"></i>listado general de referencias</div>
                                <div class="actions">
                                    <div class="btn-group">
                                        <a class="btn" href="#" data-toggle="dropdown">
                                        Mostrar/Ocultar Columnas
                                        <i class="icon-angle-down"></i>
                                        </a>
                                        <div id="sample_2_column_toggler" class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                                            <label><input type="checkbox" checked data-column="0">Id</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="portlet-body">



                                    <table class="table table-striped table-bordered table-hover table-full-width" id="sample_2">
        <thead>
            <tr>
                <th>Id</th>
                <th>CodFurgo</th>
                <th>Descripcion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('referencias_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codfurgo }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                        <a href="{{ path('referencias_edit', { 'id': entity.id }) }}" class="modal_ajax_btn btn blue" data-toggle="modal">editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('referencias_new') }}"" class="modal_ajax_btn btn red" data-toggle="modal">+ Nueva Referencia</a>

    {% endblock %}
