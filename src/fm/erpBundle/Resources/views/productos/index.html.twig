{% extends "erpBundle::layout.html.twig" %}

{% block title -%} Productos {% endblock %}

{% block body -%}


            <div class="portlet box blue">

                        <div class="portlet-title">
                                <div class="caption"><i class="icon-globe"></i>listado general de productos en venta</div>
                                <div class="actions">
                                    <div class="btn-group">
                                        <a class="btn" href="#" data-toggle="dropdown">
                                        Mostrar/Ocultar Columnas
                                        <i class="icon-angle-down"></i>
                                        </a>
                                        <div id="sample_2_column_toggler" class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                                            <label><input type="checkbox" checked data-column="3">Descuento Oficial</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="portlet-body">



    <table class="table table-striped table-bordered table-hover table-full-width" id="sample_2">

        <thead>
            <tr>
                <th>Id</th>
                <th>Concepto</th>
                <th>Precio oficial</th>
                <th>Descuento oferta</th>
                <th>Precio final</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('productos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.concepto }}</td>
                <td>{{ entity.precio }}</td>
                <td>{{ entity.descuento }}</td>
                <td>{{ entity.precio - entity.descuento }}</td>
                <td>

                        <a href="{{ path('productos_edit', { 'id': entity.id }) }}" class="modal_ajax_btn btn blue mini" data-toggle="modal">editar</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a href="{{ path('productos_new') }}" class="btn red modal_ajax_btn" data-toggle="modal">
               CREAR NUEVO PRODUCTO
            </a>
    {% endblock %}
