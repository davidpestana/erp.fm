{% extends '::base.html.twig' %}

{% block body -%}
    <h1>PedidoItem list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fechainclusion</th>
                <th>Cantidad</th>
                <th>Descripcion</th>
                <th>Observaciones</th>
                <th>Carpintero</th>
                <th>Tapicero</th>
                <th>Proveedor</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pedidoitem_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.fechaInclusion %}{{ entity.fechaInclusion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.cantidad }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.observaciones }}</td>
                <td>{{ entity.carpintero }}</td>
                <td>{{ entity.tapicero }}</td>
                <td>{{ entity.proveedor }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pedidoitem_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pedidoitem_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pedidoitem_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
