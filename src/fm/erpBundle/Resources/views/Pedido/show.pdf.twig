<pdf>

     <dynamic-page encoding="UTF-8" font-type="DejaVuSans" page-size="a4">
  <table>
    <tr>
      <td border-color="white">
        <img width="300px" src="{{ pdf_image('erpBundle:logo_reduced.png') }}"/>
      </td>

      <td border-color="white">
        <p text-align="right">
          <h1 font-size="25px">ALBARAN NÂº {{ entity.id }}</h1>
          <b>FECHA ENTREGA: </b>{{ entity.fechaEntrega|date('d/m/Y') }}<br />
          <b>PROVEEDOR: </b> {{proveedor | upper}}<br/>
        </p>

      </td>
    </tr>
  </table>


   <table>
    <tr background-color="#eb613d" color="white" font-size="14px" text-align="center">
      <td border-color="#eb613d" padding="5px" width="30px">UDS</td>
      <td width="310px" border-color="#eb613d" padding="5px">CONCEPTO</td>
