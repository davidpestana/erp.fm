      <td border-color="#eb613d" padding="5px" width="70px">FACTURAS</td>
    </tr>
      {% for producto in entity.items  if producto.proveedor == proveedor  %}
            <tr font-size="13px">
              <td border-color="#eb613d" padding="5px" text-align="center"> {{ producto.cantidad }} </td>

              <td border-color="#eb613d" padding="5px">{{ producto.descripcion }}</td>
              <td border-color="#eb613d" padding="5px" text-align="right"> {{ producto.observaciones }} </td>
              <td border-color="#eb613d" padding="5px" text-align="right"> {{ producto.factura.codfactura }} </td>
            </tr>
      {% endfor %}
    </table>


    </dynamic-page>

</pdf>