<pdf>

     <dynamic-page encoding="UTF-8" font-type="DejaVuSans" page-size="letter-landscape">
  <table>
    <tr>
      <td border-color="white">
        <img width="150px" src="{{ pdf_image('erpBundle:logo_reduced.png') }}"/>
      </td>

      <td border-color="white">
        <p text-align="right">
          <h1 font-size="15px">HOJA DE PEDIDO Nº {{ entity.id }}</h1>
          <b>FECHA ENTREGA: </b>{{ entity.fechaEntrega|date('d/m/Y') }}<br />
        </p>

      </td>
    </tr>
  </table>


   <table>
    <tr background-color="#eb613d" color="white" font-size="14px" text-align="center">
      <td border-color="#eb613d" padding="5px" width="1px">Orden</td>
      <td border-color="#eb613d" padding="5px" width="1px">Factura</td>
      <td border-color="#eb613d" padding="5px" width="290px">Detalle Carpintería</td>
      <td border-color="#eb613d" padding="5px" width="290px">Detalle Tapicería</td>
    </tr>
      {% for producto in entity.items %}
            <tr font-size="10px">
              <td font-size="14px" border-color="#eb613d" padding="7px" text-align="center">{{ producto.posicion }}</td>
              <td font-size="10px" border-color="#eb613d" padding="7px" text-align="center">{{ producto.factura.codFactura }}<br />
              {% if producto.factura.direccionenvio %} 
                {{producto.factura.direccionenvio.name }} - {{producto.factura.direccionenvio.cp }}
              {% else %}
                {{ producto.factura.cliente.name }} - {{producto.factura.cliente.cp }}
              {% endif %}
              </td>
              <td border-color="#eb613d" padding="7px" text-align="left"> {{ producto.carpintero }} </td>
              <td border-color="#eb613d" padding="7px" text-align="left"> {{ producto.tapicero }} </td>
           </tr>
      {% endfor %}
    </table>


    </dynamic-page>

</pdf>